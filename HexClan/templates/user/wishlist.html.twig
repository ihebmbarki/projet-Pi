{% extends 'user/index.html.twig' %}
{% block title %}<title>List users</title>{% endblock title%}

{% block body %}
{{ parent() }}


{% block hero %}
    <!-- ======= About Section ======= -->
    <section id="subscribe"></section>
    <section id="speakers">
        <div class="container" data-aos="fade-up">
            {% if list is empty %}
                <section id="speakers">
                    <div class="section-header">
                        <h2>La liste est vide</h2>
                    </div>
            {% endif %}
            {% for data in list %}
            <div class="row">
                <div class="col-lg-3">
                    <h3>Titre</h3>
                    <p>{{ data.titre }}</p>
                </div>
                <div class="col-lg-3">
                    <h2>A propos l'evenement </h2>
                    <p>{{ data.description }}</p>
                </div>
                <div class="col-lg-3">
                    <h3>Prix</h3>
                    <p>{{ data.prix }}dt<br></p>
                </div>
                <div class="col-lg-3">
                    <h3>Reaction</h3>

                    <a href="{{ path('removeWish',{'idEvent':data.id}) }}"><button name="addwishlist" class="btn-danger">Supprimer de ma liste</button></a>
                </div>
                {% endfor %}
            </div>
        </div>
    </section><!-- End About Section -->
{% endblock hero %}
{% endblock body %}